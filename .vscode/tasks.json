{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "command": "cmake .. && make",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "run game",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "command": "./screw-engine",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}